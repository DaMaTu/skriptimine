#!/bin/bash
# Skript arvutab esimese n täisarvu summa kasutades for-tsüklit
# Kui sisend ei ole täisarv, väljastatakse veateade

read -p "Sisesta n: " n

# Kontrollime, kas n on täisarv (võib olla ainult numbrite jada)
if ! [[ "$n" =~ ^[0-9]+$ ]]; then
    echo "Viga: sisend peab olema täisarv!"
    exit 1
fi

summa=0

for ((i=1; i<=n; i++))
do
    summa=$((summa + i))
done

echo "Esimese $n täisarvu summa on: $summa"
